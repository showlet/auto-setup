#!/bin/bash
PRIMARY="\[\e[38;5;37m\]"
SECONDARY='\[\033[38;5;129m\]'
THIRD='\[\033[38;5;66m\]'
TIME='\[\033[38;5;117m\]'
NC='\[\033[0m\]'


printName() {
  COUNTER=0
  COLOR=35
  for (( i=0; i<${#USER}; i++ )); do  
    printf "\[\033[38;5;${COLOR}m${USER:COUNTER:1}\]"
    COUNTER=$(expr $COUNTER + 1)
    if [ $((i%4)) == 0 ]
    then 
      COLOR=$(expr $COLOR + 1)
    fi

  done
}
printHost() {
  COUNTER=0
  for i in {239..247} {247..239} 
 do  
    printf "\[\033[38;5;${i}m${HOSTNAME:COUNTER:1}\]"
    COUNTER=$(expr $COUNTER + 1)
  done
}

pc() {
  COLOR=$1
  TEXT=$2
  printf "${COLOR}${TEXT}"
}
p() {
  TEXT=$1
  printf "$PRIMARY${TEXT}${NC}"
}
s() {
  TEXT=$1
  printf "${SECONDARY}${TEXT}${NC}"
}
t() {
  TEXT=$1
  printf "${THIRD}${TEXT}${NC}"
}
time1() {
  TEXT=$1
  printf "${TIME}${TEXT}${NC}"
}
b() {
  TEXT=$1
  printf "${BLINK}${TEXT}"
}

export PS1="\[\e[30;48;5;55m\]  ${NC} $(printName) $( t '@' ) $(printHost) $(p '\w') \r\n\[\e[30;48;5;37m\]  ${NC} \[\e[38;5;37m\]\d \t$(s '$(git branch 2>/dev/null | grep '^*' | colrm 1 1)' )$(t ' Î»') "
